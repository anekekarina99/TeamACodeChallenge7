<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamacodechallenge7">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utils.App"
        android:icon="@mipmap/ic_logo_apps"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_apps_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamACodeChallenge7"
        android:fullBackupContent="@xml/backup_descriptor"
        android:allowBackup="true">
        <service
            android:name=".utils.GameMusic"
            android:enabled="true" />
        <service
            android:name=".utils.GamePlayMusic"
            android:enabled="true" />
        <activity
            android:name=".ui.playgamevscomputer.PlayGameVsComputer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.playgamevsplayer.PlayGameVsPlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.splashScreen.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.landingPage.LandingPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signUp.NotifSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signUp.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profileplayer.EditProfilePlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.loginPage.LoginAct"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".ui.mainMenu.MainMenuAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profileteman.ProfileTeman"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.pilihlawan.PilihLawan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profileplayer.ProfilePlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.gamehistory.GameHistoryAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.mainMenu.ChooseGamePlayAct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.about.InstructionActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>